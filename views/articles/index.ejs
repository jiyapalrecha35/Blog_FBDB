<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin-top: 30px;
        }

        .card {
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: scale(1.02);
        }

        .card-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .card-subtitle {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1rem;
            margin-bottom: 20px;
        }

        .btn-read-more {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

        .btn-read-more:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-edit {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: #fff;
        }

        .btn-edit:hover {
            background-color: #117a8b;
            border-color: #117a8b;
        }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

        .btn-delete:hover {
            background-color: #bd2130;
            border-color: #bd2130;
        }

        .btn-new-article {
            /* margin-left: 610px; */
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
            transition: background-color 0.2s;
        }

        .btn-new-article:hover {
            background-color: #218838;
            border-color: #218838;
        }
    </style>
    <title>Exploration Hub</title>
</head>

<body>
    <div class="container">
        <h1 class="mb-4 mt-4 text-center fs-1 fw-bold lh-1 mb-5">Exploration Hub</h1>
        <a href="/articles/new" class="btn btn-new-article ">Create New Article</a>
        <% article.forEach(a => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= a.title %></h4>
                    <div class="card-subtitle text-muted mb-2"><%= a.createdAt.toLocaleDateString() %></div>
                    <p class="card-text"><%= a.description %></p>
                    <a class='btn btn-read-more' href="articles/<%= a.slug %>">Read more</a>
                    <a class='btn btn-edit' href="articles/edit/<%= a.id %>">Edit</a>
                    <form action="/articles/<%= a.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-delete">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
